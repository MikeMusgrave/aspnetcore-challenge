@model FoodItem

@{
    Layout = "_Layout";
    ViewData["Title"] = "Add";
}

@section scripts {
    <script asp-src-include="lib/jquery/dist/*.min.js"></script>
    <script asp-src-include="lib/jquery-validation/dist/jquery.*.min.js"></script>
    <script asp-src-include="lib/jquery-validation-unobtrusive/*.min.js"></script>
}

<div class="panel panel-success">
    <div class="panel-heading text-center"><h4>New Food Item</h4></div>
    <div class="panel-body">
        <form class="p-a-1" asp-action="Add" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name">Name:</label>
                <div><span asp-validation-for="Name" class="text-danger" /></div>
                <input class="form-control" asp-for="Name" />
            </div>
            <div class="form-group">
                <label asp-for="Rating">Rating:</label>
                <div><span asp-validation-for="Rating" class="text-danger" /></div>
                <select asp-for="Rating" asp-items="Html.GetEnumSelectList<Rating>()">
                    <option selected="selected" value="">Choose...</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="URL">Image URL:</label>
                <div><span asp-validation-for="URL" class="text-danger" /></div>
                <input class="form-control" asp-for="URL" />
            </div>
            <div class="form-group">
                <label asp-for="Email">Your email:</label>
                <div><span asp-validation-for="Email" class="text-danger" /></div>
                <input class="form-control" asp-for="Email" />
            </div>
            <div class="text-center">
                <button class="btn btn-primary" type="submit">
                    Save Food Item
                </button>
            </div>
        </form>
    </div>
</div>
